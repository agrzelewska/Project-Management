%p#notice= notice

%h2.todo_list_title
  = @project.title

%p.todo_list_sub_title
  = @project.description

#todo_items_wrapper
  = render @project.tasks
.forms
  = render 'tasks/form'

.links
  = link_to 'Edit', edit_project_path(@project)
  = link_to 'Back', projects_path
  = link_to 'Delete', project_path(@project), method: :delete, data: { confirm: 'Are you sure?' }
